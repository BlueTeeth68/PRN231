@page
@model UI.Pages.RentingTransactions.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>RentingTransaction</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RentingTransaction.RentingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RentingTransaction.RentingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RentingTransaction.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RentingTransaction.TotalPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RentingTransaction.RentingStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RentingTransaction.RentingStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RentingTransaction.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RentingTransaction.Customer.CustomerId)
        </dd>
    </dl>
</div>
<hr/>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RentingTransaction.RentingDetails.First().StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentingTransaction.RentingDetails.First().EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentingTransaction.RentingDetails.First().Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentingTransaction.RentingDetails.First().Car)
        </th>
    </tr>
    </thead>
    <tbody>
    @if (Model.RentingTransaction?.RentingDetails != null)
    {
        @foreach (var item in Model.RentingTransaction.RentingDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.CarId)
                </td>
            </tr>
        }
    }
    </tbody>
</table>
<div>
    <a asp-page="./Index">Back to List</a>
</div>